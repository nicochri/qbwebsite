<script>
	$(window).bind("load", function() {
		document.getElementById('body').classList.remove('d-none');
	});
	var currentChapterGlobal = 1;
	$('.chapter1').click(function() {
		currentChapterGlobal = 1;
		$('#notPaidDiv').addClass('d-none');
	});
	$('.chapter2').click(function() {
		currentChapterGlobal = 2;
		$('#notPaidDiv').removeClass('d-none');
		$('#forceSignIn').appendTo('#otherSignIn');
	});
</script>
