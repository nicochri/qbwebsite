<script type="text/javascript">
	function setDesiredQB(qbTitle) {
		var courses = ['physicsHL','chemistryHL','economicsHL', 'mathsSL', 'physicsSL', 'chemistrySL', 'economicsSL'];
		for (var i = 0; i < courses.length; i++) {
			if ($('#' + courses[i]).attr('state') == 'selected') {
				$('#' + courses[i]).attr('state', 'unselected');
				$('#' + courses[i]).css('border', 'none');
			}
		}

		var displayCourseTitle = {physicsHL: 'Physics HL', chemistryHL: 'Chemistry HL', economicsHL: 'Economics HL', mathsSL: 'Mathematics SL', physicsSL: 'Physics SL', chemistrySL: 'Chemistry SL', economicsSL: 'Economics SL'};
		$('#desiredQBDivNone').addClass('d-none');
		$('#desiredQBDiv').removeClass('d-none');
		$('#desiredQBSpan').html(displayCourseTitle[qbTitle]);

		$('#' + qbTitle).attr('state', 'selected');
		$('#' + qbTitle).css('border', '5px solid #d2a807');

		get('/api/getDesiredQB', {desiredQB: qbTitle}, function(response) {});
	}
	$('#physicsHL').click(function() {
		setDesiredQB('physicsHL');
	});
	$('#chemistryHL').click(function() {
