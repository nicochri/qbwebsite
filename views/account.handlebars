	});
	$('#sendMessage').click(function() {
		var formText = document.getElementById('exampleFormControlTextarea1').value;
		if (formText == "") {
			$('#sendMessageSuccess').addClass('d-none');
			$('#sendMessageWarning').removeClass('d-none');
		}
		else {
			$('#sendMessageSuccess').removeClass('d-none');
			$('#sendMessageWarning').addClass('d-none');
			get('/api/sendEmail', {text: formText}, function(res) {});
		}
	});
</script>